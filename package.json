{
  "name": "andrew-stack-template",
  "private": true,
  "scripts": {
    "build": "run-s build:*",
    "build:remix": "remix build",
    "build:server": "esbuild ./server.ts  --bundle --format=cjs --packages=external --platform=node --outdir=build --target=node18",
    "dev": "remix dev --manual --command 'npm run dev:server'",
    "dev:server": "node --inspect --require ./node_modules/dotenv/config ./build/server.js",
    "docker": "docker compose up --detach",
    "docker:down": "docker compose down",
    "lint": "eslint --max-warnings 0 .",
    "prod": "NODE_ENV=production node ./build/server.js",
    "routes": "remix routes",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "setup:e2e": "npm run build && DATABASE_URL=postgresql://postgres:postgres@localhost:5432/test npx prisma migrate reset --force",
    "storybook": "storybook dev",
    "storybook:build": "storybook build --output-dir ./storybook-static",
    "start": "npm run dev",
    "test": "vitest",
    "test:axe": "npm run storybook:build && npm run test:axeOnly --",
    "test:axeOnly": "axe-storybook --build-dir ./storybook-static",
    "test:e2e": "npm run setup:e2e && DATABASE_URL=postgresql://postgres:postgres@localhost:5432/test npx playwright test",
    "types": "tsc --noEmit",
    "validate": "run-p \"test -- --run\" lint types"
  },
  "eslintIgnore": [
    "/build",
    "/node_modules",
    "/playwright-report",
    "/postgres-data",
    "/public/build",
    "/storybook-static",
    "!/.storybook"
  ],
  "dependencies": {
    "@conform-to/react": "^0.9.1",
    "@conform-to/zod": "^0.9.1",
    "@mantine/core": "^7.2.2",
    "@prisma/client": "^5.6.0",
    "@remix-run/css-bundle": "^2.3.1",
    "@remix-run/express": "^2.3.1",
    "@remix-run/node": "^2.3.1",
    "@remix-run/react": "^2.3.1",
    "bcryptjs": "^2.4.3",
    "chokidar": "^3.5.3",
    "clsx": "^2.0.0",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "isbot": "^3.7.1",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tiny-invariant": "^1.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@chanzuckerberg/axe-storybook-testing": "^7.1.3",
    "@playwright/test": "^1.40.1",
    "@remix-run/dev": "^2.3.1",
    "@remix-run/eslint-config": "^2.3.1",
    "@remix-run/testing": "^2.3.1",
    "@sinonjs/fake-timers": "^11.2.2",
    "@storybook/addon-a11y": "^7.6.1",
    "@storybook/addon-essentials": "^7.6.1",
    "@storybook/react": "^7.6.1",
    "@storybook/react-webpack5": "^7.6.1",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/eslint": "^8.44.7",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.1",
    "@types/react": "^18.2.39",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "cookie": "^0.6.0",
    "dotenv": "^16.3.1",
    "esbuild": "^0.19.8",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "happy-dom": "^12.10.3",
    "npm-run-all": "^4.1.5",
    "null-loader": "^4.0.1",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "postcss-preset-mantine": "^1.11.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "prisma": "^5.6.0",
    "storybook": "^7.6.1",
    "tailwindcss": "^3.3.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^0.34.6"
  },
  "prisma": {
    "seed": "ts-node --require tsconfig-paths/register prisma/seed.ts"
  }
}
