{
  "name": "andrew-stack-template",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:remix": "remix build",
    "build:server": "esbuild ./server.ts  --bundle --format=cjs --packages=external --platform=node --outdir=build --target=node18",
    "dev": "run-p dev:*",
    "dev:build": "NODE_ENV=development npm run build:server -- --watch",
    "dev:remix": "NODE_ENV=development remix watch",
    "dev:server": "NODE_ENV=development node --inspect --require ./node_modules/dotenv/config ./build/server.js",
    "docker": "docker-compose up -d",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "prod": "NODE_ENV=production node ./build/server.js",
    "routes": "remix routes",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "start": "npm run dev",
    "test": "vitest",
    "types": "tsc --noEmit",
    "validate": "run-p \"test -- --run\" lint types"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build",
    "/postgres-data"
  ],
  "dependencies": {
    "@prisma/client": "^4.16.1",
    "@remix-run/css-bundle": "^1.19.2",
    "@remix-run/express": "^1.19.2",
    "@remix-run/node": "^1.19.2",
    "@remix-run/react": "^1.19.2",
    "@sentry/remix": "^7.62.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "isbot": "^3.6.12",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@remix-run/dev": "^1.19.2",
    "@remix-run/eslint-config": "^1.19.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/eslint": "^8.40.2",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.16.18",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@vitejs/plugin-react": "^4.0.1",
    "@vitest/coverage-v8": "^0.32.2",
    "autoprefixer": "^10.4.14",
    "cookie": "^0.5.0",
    "dotenv": "^16.3.1",
    "esbuild": "^0.18.10",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-prettier": "^5.0.0",
    "happy-dom": "^9.20.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.24",
    "prettier": "^3.0.1",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "prisma": "^4.16.1",
    "start-server-and-test": "^2.0.0",
    "tailwindcss": "^3.3.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vite-tsconfig-paths": "^3.6.0",
    "vitest": "^0.32.2"
  },
  "prisma": {
    "seed": "ts-node --require tsconfig-paths/register prisma/seed.ts"
  }
}
