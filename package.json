{
  "name": "andrew-stack-template",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "run-s build:*",
    "build:remix": "remix vite:build --sourcemapServer",
    "build:server": "esbuild ./server.ts --format=esm --packages=external --platform=node --outdir=build/express --sourcemap --target=node20",
    "dev": "NODE_ENV=development node --enable-source-maps --inspect --require ./node_modules/dotenv/config ./build/express/server.js",
    "docker": "docker compose up --detach",
    "docker:down": "docker compose down",
    "lint": "eslint --max-warnings 0 .",
    "prettier": "prettier . --cache --check",
    "prod": "NODE_ENV=production node --enable-source-maps ./build/server.js",
    "routes": "remix routes",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "setup:e2e": "npm run build && DATABASE_URL=postgresql://postgres:postgres@localhost:5432/test npx prisma migrate reset --force",
    "storybook": "storybook dev",
    "storybook:build": "storybook build --output-dir ./storybook-static",
    "start": "npm run dev",
    "test": "vitest",
    "test:axe": "npm run storybook:build -- --test && npm run test:axeOnly --",
    "test:axeOnly": "axe-storybook --build-dir ./storybook-static",
    "test:e2e": "npm run setup:e2e && DATABASE_URL=postgresql://postgres:postgres@localhost:5432/test npx playwright test",
    "types": "tsc --noEmit",
    "validate": "run-p \"test -- --run\" lint prettier types"
  },
  "eslintIgnore": [
    "/build",
    "/node_modules",
    "/playwright-report",
    "/postgres-data",
    "/public/build",
    "/storybook-static",
    "!/.storybook"
  ],
  "dependencies": {
    "@conform-to/react": "^1.0.6",
    "@conform-to/zod": "^1.0.6",
    "@fontsource/inter": "^5.0.17",
    "@prisma/client": "^5.12.0",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@remix-run/express": "^2.8.1",
    "@remix-run/node": "^2.8.1",
    "@remix-run/react": "^2.8.1",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "compression": "^1.7.4",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "isbot": "^5.1.4",
    "lucide-react": "^0.364.0",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "smart-invariant": "^2.0.0",
    "tailwind-merge": "^2.2.2",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@chanzuckerberg/axe-storybook-testing": "^8.0.1",
    "@playwright/test": "^1.42.1",
    "@remix-run/dev": "^2.8.1",
    "@remix-run/testing": "^2.8.1",
    "@sinonjs/fake-timers": "^11.2.2",
    "@storybook/addon-a11y": "^8.0.0-rc.1",
    "@storybook/addon-essentials": "^8.0.0-rc.1",
    "@storybook/addon-webpack5-compiler-swc": "^1.0.2",
    "@storybook/react": "^8.0.0-rc.1",
    "@storybook/react-webpack5": "^8.0.0-rc.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/eslint": "^8.56.7",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.3",
    "@types/react": "^18.2.74",
    "@types/react-dom": "^18.2.23",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "cookie": "^0.6.0",
    "dotenv": "^16.4.5",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-vitest": "^0.3.26",
    "happy-dom": "^14.3.10",
    "npm-run-all": "^4.1.5",
    "null-loader": "^4.0.1",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.13",
    "prisma": "^5.12.0",
    "storybook": "^8.0.0-rc.1",
    "tailwindcss": "^3.4.3",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3",
    "typescript-eslint": "^7.5.0",
    "vite": "^5.2.7",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.4.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
